---
import { Code } from "astro/components";

import Verticalgrid from "../assets/Verticalgrid.astro";
import Blurgradientleft from "../assets/Blurgradientleft.astro";
---

<section class="relative">
  <Verticalgrid />
  <Blurgradientleft />

  <div
    class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-12 lg:py-24 relative space-y-24">
    <div class="max-w-xl mx-auto text-center">
      <p
        class="text-sm text-transparent uppercase bg-gradient-to-r from-indigo-300 to-indigo-400 bg-clip-text">
        our apps
      </p>
      <p class="text-3xl font-normal mt-8 text-white tracking-tight">
        Get started today and experience seamless banking on-the-go
      </p>
      <div class="flex flex-col gap-3 justify-center mt-12 sm:flex-row">
        <button
          class="rounded-lg px-4 border py-2 text-sm font-semibold transition-all flex items-center justify-center bg-vulcan-900 text-white hover:text-indigo-400 h-10 border-vulcan-700"
          ><svg
            class="icon icon-tabler icon-tabler-brand-google-play"
            fill="none"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            height="20"
            width="20"
            ><path d="M0 0h24v24H0z" fill="none" stroke="none"></path><path
              d="M4 3.71v16.58a.7 .7 0 0 0 1.05 .606l14.622 -8.42a.55 .55 0 0 0 0 -.953l-14.622 -8.419a.7 .7 0 0 0 -1.05 .607z"
            ></path><path d="M15 9l-10.5 11.5"></path><path
              d="M4.5 3.5l10.5 11.5"></path></svg
          >
          <span class="flex flex-col items-start leading-none ml-4"
            >Download on Google Play</span
          ></button
        >
        <button
          class="rounded-lg px-4 border py-2 text-sm font-semibold transition-all flex items-center justify-center bg-vulcan-900 text-white hover:text-indigo-400 h-10 border-vulcan-700"
          ><svg
            class="icon icon-tabler icon-tabler-brand-apple"
            fill="none"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            height="20"
            width="20"
            ><path d="M0 0h24v24H0z" fill="none" stroke="none"></path><path
              d="M9 7c-3 0 -4 3 -4 5.5c0 3 2 7.5 4 7.5c1.088 -.046 1.679 -.5 3 -.5c1.312 0 1.5 .5 3 .5s4 -3 4 -5c-.028 -.01 -2.472 -.403 -2.5 -3c-.019 -2.17 2.416 -2.954 2.5 -3c-1.023 -1.492 -2.951 -1.963 -3.5 -2c-1.433 -.111 -2.83 1 -3.5 1c-.68 0 -1.9 -1 -3 -1z"
            ></path><path d="M12 4a2 2 0 0 0 2 -2a2 2 0 0 0 -2 2"></path></svg
          >
          <span class="flex flex-col items-start leading-none ml-4"
            >Download on the App Store</span
          ></button
        >
      </div>
    </div>
    <div class="grid grid-cols-1 gap-4 mt-6 list-none lg:grid-cols-2 lg:gap-3">
      <div class="lg:mt-0 mt-12 h-full space-y-3">
        <img
          alt="Lexington thumbnail"
          class="rounded-2xl shadow-2xl shadow-vulcan-950/50 w-full"
          src="/assets/card1.svg"
        />
        <img
          alt="Lexington thumbnail"
          class="rounded-2xl shadow-2xl shadow-vulcan-950/50 w-full"
          src="/assets/card6.svg"
        />
      </div>
      <div class="lg:mt-0 mt-12 h-full space-y-3">
        <img
          alt="Lexington thumbnail"
          class="rounded-2xl shadow-2xl shadow-vulcan-950/50 w-full"
          src="/assets/card3.svg"
        />
        <img
          alt="Lexington thumbnail"
          class="rounded-2xl shadow-2xl shadow-vulcan-950/50 w-full"
          src="/assets/card2.svg"
        />
      </div>
    </div>
  </div>
</section>
